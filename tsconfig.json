{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx"
  },

  "ts-node": {
    "esm": true
  },

  "include": ["src/**/*", "server/**/*", "ecosystem.cjs"],
  "exclude": ["node_modules"]
}
